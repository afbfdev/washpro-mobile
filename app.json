{
  "expo": {
    "name": "ZeroEau Washer",
    "slug": "washpro-mobile",
    "version": "1.0.0",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/9a4bd93c-6e1d-46cb-b7e3-1753a987a4ce",
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "orientation": "portrait",
    "icon": "./assets/logozo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logozo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B263B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.washpro.tech",
      "infoPlist": {
        "NSCameraUsageDescription": "WashPro a besoin d'accéder à la caméra pour prendre des photos des véhicules.",
        "NSPhotoLibraryUsageDescription": "WashPro a besoin d'accéder à vos photos pour ajouter des images de véhicules.",
        "NSLocationWhenInUseUsageDescription": "WashPro a besoin de votre position pour calculer la distance vers les missions.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "WashPro a besoin de votre position pour le suivi des missions.",
        "UIBackgroundModes": ["fetch", "remote-notification"]
      },
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logozo.png",
        "backgroundColor": "#1B263B"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.washpro.tech",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-updates",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "WashPro a besoin de votre position pour le suivi des missions."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "WashPro a besoin d'accéder à vos photos.",
          "cameraPermission": "WashPro a besoin d'accéder à la caméra."
        }
      ],
      "expo-font",
      "expo-notifications",
      "expo-video"
    ],
    "extra": {
      "eas": {
        "projectId": "9a4bd93c-6e1d-46cb-b7e3-1753a987a4ce"
      }
    },
    "owner": "aldotdev"
  }
}
